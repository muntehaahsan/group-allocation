<!DOCTYPE html>
<html>
<head>
  <title>GroupAllocation</title>
  <link rel="icon" type="image/png" href="/assets/group_icon.png"/>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div>
		<div class="row" style="width: 100%; height: 100%;">
		    <% if alert %>
		      <div class="alert-box warning radius">
			<%= alert %>
			<%= link_to 'x', '#', class: 'close', onclick: '$(".alert-box").hide();' %>
		      </div>
		    <% end %>
		    <% if notice %>
		      <div class="alert-box success radius">
			    <%= notice %>
			    <%= link_to 'x', '#', class: 'close', onclick: '$(".alert-box").hide();' %>
		      </div>
		    <% end %>
		    <% if user_signed_in? %>
                       <div class="user_info">
			  Logged in as <strong><%= current_user.email %></strong>.
		       </div>
			  <%= render partial: '/layouts/sidebar/layout_sidebar' %>
                       
		    <% end %>
		</div>
		<div class="yield_div">    	
		    <%= yield %>
                </div>
	</div>

</body>
</html>
